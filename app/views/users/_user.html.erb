<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

   <h1>item details </h1>

   <table>
    <thead>
      <tr>
      <th>Name</th>
      <th>price</th>
      <th colspan="3"></th>
      </tr>
    </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.address %></td>      
    <tbody> 
        <% user.items.each do |item| %>
         <tr>
         <td><%= item.name%></td>
         <td><%= item.price%></td>
         <td><%= image_tag item.avatar(:medium) %></td>
         <%end%>
         </tr>
         <td><%= link_to 'Show', user %></td>
         <div id ="short_list_user"><td><%= link_to 'Edit', edit_user_path(user), :remote => true %></td></div>
         <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
         <td><div align="left" id="new_user_<%=user.id%>"><%= link_to 'add item', new_user_item_path(user),:multipart => true, :remote => true %></div></td> 
    <% end %>
  </tbody>
</table>
